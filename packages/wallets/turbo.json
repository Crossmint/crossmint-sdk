{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "tsup.config.ts",
                "!./**/*.test.{ts,tsx}",
                "tsconfig.json"
            ],
            "outputs": ["dist/**"]
        },
        "test:vitest": {
            "inputs": ["src/**", "vitest.config.ts"]
        }
    }
}
