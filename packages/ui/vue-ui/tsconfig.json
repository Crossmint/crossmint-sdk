{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/index.js"],
    "exclude": ["src/**/__tests__/*"]
}
