{
    "name": "@crossmint/client-sdk-react-ui",
    "version": "0.1.7-alpha.1",
    "author": "Paella Labs Inc",
    "license": "Apache-2.0",
    "repository": "https://github.com/CrossMint/crossmint-client-sdk",
    "type": "module",
    "sideEffects": false,
    "main": "lib/index.cjs",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./lib/index.cjs"
        }
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "create-version-file": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
        "version": "yarn run create-version-file && git add .",
        "prebuild": "yarn run create-version-file",
        "clean": "shx rm -rf lib/*",
        "build": "yarn clean && tsup src/index.ts --external react,react-dom --format esm,cjs --outDir ./lib --minify --dts",
        "test": "jest"
    },
    "dependencies": {
        "@crossmint/client-sdk-base": "^0.1.3-alpha.1",
        "react-jss": "10.9.0",
        "uuid": "^8.3.2"
    },
    "peerDependencies": {
        "react": ">=17.0.2",
        "react-dom": ">=17.0.2"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.11",
        "jest": "^27.5.1",
        "node-fetch": "^3.2.0",
        "ts-jest": "^27.1.3",
        "ts-node-dev": "^1.1.8"
    }
}
