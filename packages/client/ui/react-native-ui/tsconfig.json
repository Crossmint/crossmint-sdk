{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "skipLibCheck": true,
        "declaration": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "example", "**/__tests__/**"]
}
